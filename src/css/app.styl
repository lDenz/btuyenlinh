// app global css
.echarts { width:100%; height:100%; }

.grid {
  position: relative;
  padding:0;
  margin:0 -5px;
  font-size:0;
}
.item {
  position: absolute;
  margin:0;
  padding:5px;
  width:25%;
  z-index: 1;
}
.grid-1 .item { width:50%;}
.item.muuri-item-dragging {
  z-index: 3;
}
.item.muuri-item-releasing {
  z-index: 2;
}
.item.muuri-item-hidden {
  z-index: 0;
}
.item-content {
  position: relative;
  background:#f3f3f3;
  width: 100%;
  height: 100%;
}